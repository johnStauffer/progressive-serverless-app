<!DOCTYPE html>
<html>
{{> global-head}}
<body>
	{{> header}}
	<main id="main" class="container container-small">
		<h2>Edit Account</h2>
		<div class="link-wrapper">
			<a href="/account-profile.html">My Account</a>
		</div>
		<div class="content-wrapper">
			<div class="user-profile">
				<div class="user-image-wrapper">
					<img src="" class="user-image" />
				</div>
				<div class="user-detail-wrapper">
					<div class="user-name">
						<h3>__userName__</h3>
					</div>
					<div class="user-email">
						<p>__userEmail__</p>
					</div>
					<div class="user-phone">
						<p>__userPhone__</p>
					</div>
					<div class="user-address">
						<p>__streetAddress__</p>
						<p>__city__</p>
						<p>__state__</p>
						<p>__zip__</p>
					</div>
				</div>
			</div>
		</div>
		<div class="link-wrapper"></div>
			<a href="/account-change-password.html">Change Password</a>
		</div>
	</main>
	{{> global-scripts}}
</body>